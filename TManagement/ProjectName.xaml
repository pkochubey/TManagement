<Window x:Class="TManagement.ProjectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Имя проекта" Height="118" Width="338" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Top">
            <TextBox x:Name="ProjectNameTextBox" Height="30" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="14" VerticalContentAlignment="Center"/>
        </StackPanel>
        <Button Margin="2" DockPanel.Dock="Bottom" Content="Сохранить" HorizontalAlignment="Right" Width="88"  FontSize="14" Height="34" Click="SaveButton_Click"/>
    </DockPanel>
</Window>
