<Window x:Class="TManagement.ProjectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Имя проекта" Height="105" Width="290" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <DockPanel>
        <TextBox DockPanel.Dock="Top" x:Name="ProjectNameTextBox" HorizontalAlignment="Left" Height="30" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" FontSize="14" VerticalContentAlignment="Center"/>
        <Button DockPanel.Dock="Bottom" Content="Сохранить" HorizontalAlignment="Right" Width="88" Margin="4" FontSize="14" Height="34" Click="SaveButton_Click"/>
    </DockPanel>
</Window>
